<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginBottom="3sp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/addMenuItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="130sp"
        android:layout_marginStart="20sp"
        android:textSize="12sp"
        android:text="Pizza Quatro Formaggi"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="8sp"/>



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/decQuantityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:textSize="25sp"
        android:layout_marginLeft="270sp"
        android:text="-"
        android:textColor="@color/black"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menuItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:textSize="25sp"
        android:text="0"
        android:layout_marginLeft="290sp"
        android:layout_marginTop="2sp">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/incQuantityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:textSize="25sp"
        android:layout_marginLeft="310sp"
        android:text="+"
        android:textColor="@color/black"/>



</androidx.cardview.widget.CardView>